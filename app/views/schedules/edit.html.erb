<div class="container">
  <div class="row justify-content-center">
    <col-4 class="col-md-6">
      <h1>Edit schedule of room <%= @schedule.room.name %></h1>
      <%= simple_form_for [ @room, @schedule ] do |f| %>
        <%= f.input :start_time %>
        <%= f.input :end_time %>
        <% if policy(@building).edit? %>
          <%= f.input :user_id, collection: @users %>
        <% end %>
        <%= f.button :submit %>
      <% end %>
    </col-4>
  </div>
</div>
