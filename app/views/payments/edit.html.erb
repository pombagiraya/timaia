<div class="container">
  <div class="row justify-content-center">
    <col-4 class="col-md-6">
      <h1>Edit payment <%= @payment.payment_date %></h1>
      <%= simple_form_for @payment do |f| %>
        <%= f.input :payment_date %>
        <%= f.button :submit %>
      <% end %>
    </col-4>
  </div>
  <button type="button" class="btn btn-light"><%= link_to 'Back', apartment_path(@payment.apartment_id) %></button>
</div>
