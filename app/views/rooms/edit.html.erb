<div class="container">
  <div class="row justify-content-center">
    <col-4 class="col-md-6">
      <h1 class="mb-3">Edit Room <%= @room.name %></h1>
      <%= simple_form_for [ @building, @room] do |f| %>
        <%= f.input :name %>
        <%= f.input :price %>
        <%= f.button :submit %>
      <% end %>
    </col-4>
  </div>
  <button type="button" class="btn btn-light"><%= link_to 'Back', building_path(@room.building.id) %></button>
</div>
